{
  "name": "norml",
  "version": "0.1.0",
  "description": "NORML - Node REST Microservice Library",
  "type": "module",
  "main": "./ports/server.js",
  "scripts": {
    "test": "node --test --experimental-test-coverage=\"directory=tests/coverage\" tests/**/*.test.js && node --no-warnings ports/test-cleanup.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage=\"directory=tests/coverage\" tests/**/*.test.js && node --no-warnings ports/test-cleanup.js",
    "start": "node ports/server.js",
    "dev": "node --watch ports/server.js",
    "build": "node ports/build-static.js",
    "clean": "rm -rf node_modules && npm install",
    "clean:tests": "node --no-warnings ports/test-cleanup.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
  }
}
